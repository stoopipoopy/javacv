<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.CheckBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.javafx.cameraController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Button fx:id="button" text="Start Camera" onAction="#onCameraButtonClicked"/>
    <CheckBox fx:id="grayscale" text="Show in gray scale"/>
    <CheckBox fx:id="logo" text="show logo" onAction="#onLogoEnabled"/>
    <ImageView fx:id="currentFrame"/>
</VBox>
